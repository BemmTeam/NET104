<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop Lego</title>
    <!-- reset css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
        integrity="sha512-NhSC1YmyruXifcj/KFRWoC561YpHpc5Jtzgvbuzx5VozKpWvQ+4nXhPdFgmx8xqexRcpAglTj9sIBWINXa8x5w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/base.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/manage.css" />
    

</head>

<body>
    <div class="main">
        <!-- header -->
        <header class="header">
            <div class="header_wrap">
                <div class="header_logo">
                    <img src="/images/LEGO.png" alt="logo" class="header_logo-img" />
                                        <h1 class="header_logo-title"><a style="text-decoration: none; color:#ffff;" href="/">LEGO PRO MANAGE</a></h1>

                </div>
              

                <div class="header_groupuser">
                  
                    <div class="header_notify">
                        <i class="header_cart-icon fa fa-bell"></i>
                    </div>
                </div>

                <div class="header_user">

                    @await Html.PartialAsync("_LoginPartial")
                </div>
                <!-- dang nhap dang ky -->
                <!-- <div class="header_controls">
                    <a href="#" class="header_controls-reg">Đăng ký</a>
                    <a href="#" class="header_controls-reg">Đăng nhập</a>
                </div> -->
            </div>
        </header>
        <!-- end header -->
        <!-- aside -->
        <div class="main-body grid">
            <div class="grid_row">
                <div class="grid_column-2">
                    <nav class="category">
                            <h3 class="category_heading">
                                <i class="category_heading-icon fas fa-list"></i> Danh mục
                            </h3>
                            @*  category-item-active *@
                            <ul class="category-list">
                                <li class="category-item">
                                    <a href="/dbmanage" class="category-item_link">Khởi tạo Database</a>
                                </li>
                                <li class="category-item">
                                    <a asp-area= "manage" asp-controller="user" asp-action="index" class="category-item_link">Quản lý user</a>
                                </li>
                                <li class="category-item">
                                    <a asp-area= "manage" asp-controller="product" asp-action="index" class="category-item_link">Quản lý sản phẩm</a>
                                </li>
                                <li class="category-item">
                                    <a asp-area= "manage" asp-controller="category" asp-action="index" class="category-item_link">Quản lý danh mục</a>
                                </li>
                                  <li class="category-item">
                                    <a asp-area= "manage" asp-controller="cart" asp-action="index" class="category-item_link">Quản lý hoá đơn</a>
                                </li>
                              
                            </ul>
                        </nav>
                </div>
                <div class="grid_column-10">@RenderBody()</div>
            </div>
        </div>
        <!-- end aside -->
        <!-- Footer  -->
        <footer class="footer">
            <div class="footer_bottom">

                <div class="gird_row">
                    <p class="footer_text">Bản quyền thuộc về Nguyễn Thành</p>
                </div>
            </div>
        </footer>
        <!-- end footer -->
    </div>

    <script>
        var category = document.querySelectorAll(".category-item");
        category[@ViewData["num"]].classList.add("category-item-active");
    </script>
</body>

</html>
